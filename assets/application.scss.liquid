/* START MENU DRAWER */

.menu-drawer {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    height: 100vh;
    width: 100%;
    z-index: 99;
    max-width: 350px;
    background: #0A1258 !important;
    padding: 72px 25px 25px 25px;
    transition: transform 0.9s cubic-bezier(0.165, 0.84, 0.44, 1), left 0.5s 0s;
  
    &::before {
      content: "";
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
      box-shadow: 1px 3px 47px 37px rgba(0,0,0,0.25);
      -webkit-box-shadow: 1px 3px 47px 37px rgba(0,0,0,0.25);
      -moz-box-shadow: 1px 3px 47px 37px rgba(0,0,0,0.25);
      transition-property: opacity;
      z-index: -1;
    }
  
    @include phone {
      position: fixed;
      width: calc(100vw - 50px);
    }
}
  
.menu-drawer.hidden {
    transform: translateX(-100%);
}

.menu-drawer.hidden::before {
    opacity: 0;
}

.menu-drawer-inner {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    }

.menu-button {
    position: relative;
    cursor: pointer;
    transition: 0.15s;
    z-index: 999;

    &:hover {
        padding-left: 15px;
    }
}

.menu-button:hover .menu-arrow-icon {
    opacity: 1;
    left: 0;
}

.menu-arrow-icon {
    transform: rotate(180deg);
    opacity: 0;
    width: 11.5px;
    height: 12px;
    position: absolute;
    top: 5px;
    left: -15px;
    transition: 0.15s;
    pointer-events: none;

}

