/* http://meyerweb.com/eric/tools/css/reset/ 
   v2.0 | 20110126
   License: none (public domain)
*/

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed, 
figure, figcaption, footer, header, hgroup, 
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
	margin: 0;
	padding: 0;
	border: 0;
	font-size: 100%;
	font: inherit;
	vertical-align: baseline;
}
/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section {
	display: block;
}
body {
	line-height: 1;
}
ol, ul {
	list-style: none;
}
blockquote, q {
	quotes: none;
}
blockquote:before, blockquote:after,
q:before, q:after {
	content: '';
	content: none;
}
table {
	border-collapse: collapse;
	border-spacing: 0;
}


/* GENERAL STYLING */

button {
    margin: 0;
    padding: 0;
    background-color: transparent;
    border: none;
    appearance: none;
    box-shadow: none;
    font: inherit;
    outline: none;
}
a {
    text-decoration: none;
    color: #0A1258;
}
::selection {
    background-color: #0A1258;
    color: white;
}

/* START VARIABLES */
@mixin footer-phone {
    @media (max-width: 450px) {
        @content;
    }
}

@mixin phone {
    @media (max-width: 599px) {
        @content;
    }
}

@mixin tablet {
    @media (max-width: 900px) {
        @content;
    }
}

@mixin desktop {
    @media (min-width: 1200px) {
        @content;
    }
}

/* START PRESETS */

.container,
.footer,
.header {
    padding : 0 25px;
}

body {
    font-weight: 700;
    font-size: 16px;
    font-family: 'Montserrat', Helvetica, Arial, sans-serif;
    line-height: 1.25;
}

main {
    padding-top: 72px;

    @include phone{
        padding-top: 0;
    }
}

.flex{
    display: flex;
}

.space-between {
    justify-content: space-between;
}

.column {
    flex-direction: column;
}

.half {
    width: 50%;
}

/* START HEADER */
.header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background-color: #0A1258;
    z-index: 10;

    @include phone{
        position: static;
    }

    * {
        color: white;
    }
}

.header-inner {
    height: 72px;
    align-items: center;
    border-bottom: 1px solid #0A1258; 

    @include phone{
        display: none;
    }
}

.header-title {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
}

/* START FOOTER*/
footer {
    position: relative;
    left: 0;
    bottom: 0;
    width: 100%;
    background-color: #FFF;
    text-align: center;
    display: flex;
    flex-direction: row;
    justify-content: space-between;

    @include footer-phone{
        position: static;
        flex-direction: column;
        min-width: 300px;
    }
}

.footer-box {
    padding: 30px 25px;
    max-height: 200px;
}

.footer-box-right {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

// Footer Content Left Side

.footer-contact-btns {
    display: flex;
    flex-direction: column;
}

.foot-contact {
    padding: 15px 20px;
    background-color: #40E0D0;
    text-decoration: underline;
    margin: 15px 0px;
}

.foot-privacy-policy {
    padding: 5px 10px;
    color:blue;
    font-weight: 300;
    text-decoration: underline;
}

// Footer Content Right Side

.footer-contact-title p{
    color: #3D3D3D;
    font-weight: 700;
}

.footer-contact-info p{
    color: #777;
    font-weight: 500;
}




/* START PRODUCT PAGE */
.product-template {
    padding-top: 25px;
    display: grid;
    grid-template-columns: calc((100% - 25px) / 2) calc((100% - 25px) / 2);

}

.product-description-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.product-description {
    width: 50%;
    margin-bottom: 30px;
}

.product-title {
    margin-bottom: 100px;
    font-size: 24px;
    text-transform: uppercase;
}

.product-option-row {
    position: relative;
    user-select: none;
}

/* START COLLECTION */

.collection-list {
    flex-wrap: wrap;
}

/* START PRODUCT CARD */
.product-card {
    width: calc((100% - 25px * 2) / 3);
    margin-bottom: 32px;
    height: 100%;
}

.product-image-wrapper {
    padding-top: 120%;
    display:block;
    position: relative;
    overflow: hidden;
    margin-bottom: 20px;
}

.swiper-container {
    overflow: hidden;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.swiper-slide {
    display: flex;
    justify-content: start;
    align-items: center;
    position: relative;
    user-select: none;

    img {
        width: 100%;
        height: 100%;
        outline-style: none;
        box-shadow: none;
        border-color: transparent;
        object-fit: cover;
    }

}

.swiper-button-prev {
    cursor: url('{{ "cursor-arrow-left.svg" | asset_url }}') 15 8, auto;
}

.swiper-button-next {
    cursor: url('{{ "cursor-arrow-right.svg" | asset_url }}') 15 8, auto;
}

.swiper-button-prev, .swiper-button-next {
    position: absolute;
    top: 0;
    width: 25%;
    height: 100%;
    margin-top: 0;
    outline-style: none;
    box-shadow: none;
    border-color: transparent;


    &::after {
        content: none;
    }

    @include phone{
        display: none;
    }
}

.product-card-title {
    position: relative;
    margin: 16px 0;
    
    .add-button {
        width: 18px;
        height: 18px;
        position: absolute;
        top: 0;
        right: 0;
        border-radius: 50%;

        &::before {
            content: "";
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            border: 1px solid #0A1258;
            border-radius: inherit;
        }

        .plus {
            &::after,
            &::before {
                content: "";
                position: absolute;
                width: 8px;
                height: 2px;
                position: absolute;
                top: 9px;
                left: 6px;
                background: currentColor;
            }

            &::before {
                transform: rotate(90deg);
            }
        }
    }
}

/* CONTACT PAGE */

.contact-form-title {
    flex-direction: column;
    height: 14rem;
    justify-content: center;
}

.contact-title-heading {
    background-color: #0A1258;
    height: 4.5rem;
    width: 35%;
    min-width: 16rem;
    align-items: center;
    clip-path: polygon(0 0, 100% 0, calc(100% - 40px) 100%, 0% 100%);
}

// 19 rem when mobile

.contact-form-title h3 {
    color: #FFF;
    font-size: 34px;
    font-weight: 800;
    padding: 1.5rem;
}

.contact-form-title p {
    color: #0A1258 !important;
    line-height: 1.3em;
    font-size: 1.0rem;
    padding: 0 1.5rem;
    margin-top: 2rem;
}

.contact-container {
    flex-direction: row;
}

#contact_form {
    display: flex;
    flex-direction: column;
}

.contact-side-info {
    flex-direction: column;
}

.contact-form {
    width: 70%;
    align-items: center;
}

.contact-side-info {
    width: 30%;
    color: #0A1258;
}

.form-field {
    flex-direction: column;
    width: 80%;
    padding: 0.5rem 0;
}

.form-field label {
    color: #3D3D3D;
    font-size: 20px;
    font-weight: bold;
    line-height: 1.5em;
    padding-bottom: 0.25rem;
}

.form-field {
    input[type="text"],
    input[type="email"],
    input[type="tel"],
    textarea {
        box-shadow: 0px 1px 4px rgba(0,0,0,.4);
        border: none;
        font-size: 18px;
        color: #777777;
        height: var(--input-height);
    }
}

