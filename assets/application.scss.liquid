.product-title {
    margin-bottom: 100px;
    font-size: 24px;
    text-transform: uppercase;
}

.product-option-row {
    position: relative;
    user-select: none;
}

.product-option-label::before, .add-to-cart-button::before {
    content: "";
    width: 11px;
    height: 11px;
    position: absolute;
    right: 25px;
    top: 50%;
    translate: translateY(-50%);
    background: #0A1258;
    border-radius: 50%;
}

.product-option-label, .add-to-cart-button {
    padding: 25px;
    position: relative;
    border: solid;
    cursor: pointer;
    border-color: #0A1258;
    border-width: 1px 1px 0;
    border-right-color: transparent;
    border-left-color: transparent;
    background-color: #FFF;
    font-size: 16px;
    width: 100%;
    text-align: left;
}

.add-to-cart-button {
    text-transform: uppercase;

    &:hover {
        background-color: #0A1258;
        color: #FFF;
    }
}

.product-option-label:hover {
    background-color: #40E0D0;
    color: #FFF;
}

.product-option-list {
    position: absolute;
    bottom: 70px;
    right: 0;
    left: 0;
    background-color: #FFF;
    border: 1px solid #0A1258;
}

.product-option-item {
    padding: 25px;
    cursor: pointer;

    &:nth-child(n+2) {
        box-shadow: inset 0 1px #9a9a9a;
    }

    &:hover {
        background-color: #40E0D0;
    }
}

/* START MINI CART */

.mini-cart.hidden {
    transform: translateX(100%);

    .mini-cart-close-button {
        opacity: 0;
        transition: none;
    }
}

.mini-cart-close-button {
    cursor: pointer;
    position: absolute;
    top: 25px;
    left: 25px;
    right: auto;
    color: inherit;
    transition: opacity 0.5s 0.1s, padding 0.15s;

}

.mini-cart.hidden::before {
    opacity: 0;
}

.mini-cart {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    z-index: 99;
    max-width: 350px;
    // background-color: #0A1258;
    padding: 72px 25px 25px 25px;
    transition-property: transform;

    &::before {
        content: "";
        width: 100%;
        height: 1000%;
        // Some hacky CSS to make the full mini-cart bg colored
        position: absolute;
        background-color: #0A1258;
        top: 0;
        left: 0;
        box-shadow: 0 4px 48px 36px rgba(0,0,0,0.25) !important;
        -webkit-box-shadow: 0 4px 48px 36px rgba(0,0,0,0.25);
        -moz-box-shadow: 0 4px 48px 36px rgba(0,0,0,0.25);
        transition-property: opacity;
        z-index: -1;
    }
    
    @include phone {
        position: fixed;
        width: calc(100vw - 50px);
        height: 500%;
        // overflow-x: hidden;
    }
}

.mini-cart, .mini-cart::before {
    transition-duration: 1s;
    transition-timing-function: cubic-bezier(0.165, 0.84, 0.44, 1);
}

.cart-form {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.cart-button {
    cursor: pointer;
    position: relative;
    transition: 0.15s;
    z-index: 999;

    &:hover {
