/* START PRODUCT CARD */
.product-card {
    width: calc((100% - 25px * 2) / 3);
    margin-bottom: 32px;
    height: 100%;

    @include phone{
        width: 100%;
    }
}

.product-image-wrapper {
    padding-top: 120%;
    display:block;
    position: relative;
    overflow: hidden;
    margin-bottom: 20px;
}

.swiper-container {
    overflow: hidden;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.swiper-slide {
    display: flex;
    justify-content: start;
    align-items: center;
    position: relative;
    user-select: none;

    img {
        width: 100%;
        height: 100%;
        outline-style: none;
        box-shadow: none;
        border-color: transparent;
        object-fit: cover;
    }

}

.swiper-button-prev {
    cursor: url('{{ "cursor-arrow-left.svg" | asset_url }}') 15 8, auto;
}

.swiper-button-next {
    cursor: url('{{ "cursor-arrow-right.svg" | asset_url }}') 15 8, auto;
}

.swiper-button-prev, .swiper-button-next {
    position: absolute;
    top: 0;
    width: 25%;
    height: 100%;
    margin-top: 0;
    outline-style: none;
    box-shadow: none;
    border-color: transparent;


    &::after {
        content: none;
    }

    @include phone{
        display: none;
    }
}

.product-card-title {
    position: relative;
    margin: 16px 0;

    h3 {
        padding-right: 20px;
    }
    
    .add-button {
        width: 20px;
        height: 20px;
        position: absolute;
        top: 0;
        right: 0;
        border-radius: 50%;

        &::before {
            content: "";
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            border: 1px solid #0A1258;
            border-radius: inherit;
        }

        .plus {
            &::after,
            &::before {
                content: "";
                position: absolute;
                width: 8px;
                height: 2px;
                position: absolute;
                top: 9px;
                left: 6px;
                background: currentColor;
            }

            &::before {
                transform: rotate(90deg);
            }
        }
    }
}

.product-card-title:hover .add-button {
    color: #FFF;
    background-color: #0A1258;
}

.product-card-colors {
    display: none;
}

.product-card-title:hover .product-card-price {
    display: none;
}

.product-card-title:hover .product-card-colors {
    display: block;
}

